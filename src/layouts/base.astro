---
import Footer from '@/components/footer/index.astro'
import Header from '@/components/header/index.astro'

import '@/styles/global.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Knowledge Transfer Documentation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="isolate flex h-screen w-screen flex-col bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100"
  >
    <Header />
    <main class="relative flex flex-grow flex-col overflow-auto">
      <div class="flex grow">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
