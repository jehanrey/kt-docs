---
import { BASE } from '@/helpers/constants'

import Theme from './theme.astro'
---

<header
  class="border-border bg-background/90 sticky top-0 z-40 border-b backdrop-blur-sm"
>
  <div
    class="container mx-auto flex items-center justify-between px-6 py-2 lg:px-8"
  >
    <a
      href={BASE}
      class="font-mono-display text-foreground hover:text-electric flex items-baseline gap-0 text-sm font-medium tracking-tight transition-colors"
    >
      <span class="text-electric opacity-60">[</span>
      <span>KT</span>
      <span class="text-electric opacity-60">]</span>
      <span class="text-muted-foreground ml-2 font-light">docs</span>
    </a>
    <Theme />
  </div>
</header>
