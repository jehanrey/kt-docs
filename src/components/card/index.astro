---
import { parseClassNames } from '@/helpers/parseClassNames'

interface Props {
  class?: string
  href?: string
}

const { class: className, href } = Astro.props
---

<div
  class={parseClassNames(
    'group relative border border-border bg-card p-6 transition-colors duration-200 hover:border-electric',
    className,
  )}
>
  <slot />
  {href && <a class="absolute inset-0" href={href} />}
  <div
    class="bg-electric pointer-events-none absolute inset-x-0 top-0 h-px opacity-0 transition-opacity duration-200 group-hover:opacity-100"
  >
  </div>
</div>
