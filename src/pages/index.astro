---
import { baseHref } from '@/helpers/href'

import BaseLayout from '../layouts/base.astro'
---

<BaseLayout title="KT Docs" footer={false}>
  <div
    id="hero"
    class="grain dot-grid relative flex w-full grow flex-col items-center justify-center overflow-hidden px-6"
  >
    <!-- Eyebrow -->
    <p
      class="animate-fade-up font-mono-display text-electric mb-8 text-xs font-medium tracking-[0.2em] uppercase opacity-80 delay-100"
    >
      Samsung BDW &middot; Knowledge Transfer
    </p>

    <!-- Hero headline -->
    <h1
      class="animate-fade-up font-mono-display text-center delay-200"
      style="font-size: clamp(4rem, 12vw, 10rem); line-height: 0.95; letter-spacing: -0.03em;"
    >
      <span class="text-stroke-electric block">Knowledge</span>
      <span class="text-foreground block">Transfer</span>
    </h1>

    <!-- Description -->
    <p
      class="animate-fade-up font-sans-body text-muted-foreground mx-auto mt-10 max-w-md text-center text-sm delay-300"
    >
      Engineering documentation for authentication, SSO, and developer tooling.
    </p>

    <!-- CTAs -->
    <div class="animate-fade-up mt-10 flex items-center gap-4 delay-400">
      <a
        href={baseHref('/wiki')}
        class="border-electric font-mono-display text-electric hover:bg-electric hover:text-background border bg-transparent px-6 py-2.5 text-sm font-medium transition-colors"
      >
        Get Started
      </a>
      <a
        href={baseHref('/wiki')}
        class="border-border font-mono-display text-muted-foreground hover:border-foreground hover:text-foreground border px-6 py-2.5 text-sm font-medium transition-colors"
      >
        Browse Docs
      </a>
    </div>

    <!-- Bottom gradient fade -->
    <div
      class="from-background pointer-events-none absolute inset-x-0 bottom-0 h-32 bg-gradient-to-t to-transparent"
    >
    </div>
  </div>
</BaseLayout>

<script is:inline>
  const hero = document.getElementById('hero')
  if (hero) {
    hero.addEventListener('mousemove', (e) => {
      const rect = hero.getBoundingClientRect()
      const cx = rect.left + rect.width / 2
      const cy = rect.top + rect.height / 2
      const dx = ((e.clientX - cx) / rect.width) * 10
      const dy = ((e.clientY - cy) / rect.height) * 10
      hero.style.setProperty('--drift-x', `${dx}px`)
      hero.style.setProperty('--drift-y', `${dy}px`)
    })
  }
</script>
